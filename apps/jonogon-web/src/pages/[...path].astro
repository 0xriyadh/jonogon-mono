---
import MainLayout from '../layouts/main.astro';
import App from '../app/App';

const hostname = Astro.url.hostname;
const ssrPath = Astro.url.pathname;
const ssrSearch = Astro.url.search;
---

<MainLayout>
	<App
		client:load

		ssrPath={ssrPath}
		ssrSearch={ssrSearch}
		hostname={hostname}
	/>
</MainLayout>
